<Page x:Class="CorochinMCWPF.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CorochinMCWPF.Pages"
      mc:Ignorable="d" 
      Title="Авторизация" Style="{StaticResource MainPageStyle}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="50" TextAlignment="Right" Text="Логин:"></TextBlock>
                <TextBox Width="200" Name="TxtBoxLogin"  ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="50" TextAlignment="Right" Text="Пароль:"></TextBlock>
                <PasswordBox Width="200" Name="PassBoxPassword" ></PasswordBox>
            </StackPanel>
            <Button HorizontalAlignment="Right" Width="200" Content="Войти" Name="BtnLogin" Click="BtnLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
